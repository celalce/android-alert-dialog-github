<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="127dp"
            android:layout_height="41dp"
            android:text="Üye Ol"
            android:id="@+id/tvuyeol"
            tools:layout_editor_absoluteY="385dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textColor="@color/purple"
            android:fontFamily="sans-serif-black" app:layout_constraintHorizontal_bias="0.5"
    />
    <TextView
            android:layout_width="127dp"
            android:layout_height="41dp"
            android:text="Giriş Sayfası"
            tools:layout_editor_absoluteY="72dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="20sp" android:textColor="@color/purple"
            android:fontFamily="sans-serif-black"
            android:id="@+id/tvgirisyap"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:background="@drawable/buttonarkaplan"
            android:text="Giriş Yap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/girisyapbutton"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.499"
            android:textSize="20sp"/>
    <EditText
            android:padding="15dp"
            android:background="@drawable/edittextarkaplan"
            android:layout_width="207dp"
            android:layout_height="59dp"
            android:inputType="text"
            android:textColor="@color/purple"
            android:hint="Email Adresinizi Giriniz"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/etemail"
            tools:layout_editor_absoluteY="146dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:padding="15dp"
            android:background="@drawable/edittextarkaplan"
            android:layout_width="207dp"
            android:layout_height="59dp"
            android:inputType="text"
            android:textColor="@color/purple"
            android:hint="Email Adresinizi Giriniz"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/etparola"
            tools:layout_editor_absoluteY="221dp" android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>