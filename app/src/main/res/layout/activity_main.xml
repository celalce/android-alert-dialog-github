<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:padding="16dp">
    <TextView
            android:layout_width="86dp"
            android:layout_height="29dp"
            android:text="Üye Ol"

            android:id="@+id/tvuyeol"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" android:textColor="@color/purple"
            android:fontFamily="sans-serif-black" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/girisyapbutton"/>
    <TextView
            android:layout_width="127dp"
            android:layout_height="41dp"
            android:text="Giriş Sayfası"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="20sp" android:textColor="@color/purple"
            android:fontFamily="sans-serif-black"
            android:id="@+id/tvgirisyap"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"/>
    <Button
            android:background="@drawable/buttonarkaplan"
            android:text="Giriş Yap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/girisyapbutton"
            android:textSize="20sp" android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/etparola" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:padding="15dp"
            android:background="@drawable/edittextarkaplan"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:inputType="text"
            android:textColor="@color/purple"
            android:hint="Email Adresinizi Giriniz"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/etemail"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/tvgirisyap"/>
    <EditText
            android:padding="15dp"
            android:background="@drawable/edittextarkaplan"
            android:layout_width="0dp"
            android:layout_height="59dp"
            android:inputType="text"
            android:textColor="@color/purple"
            android:hint="Parolanızı Giriniz"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/etparola"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/etemail"/>

</androidx.constraintlayout.widget.ConstraintLayout>